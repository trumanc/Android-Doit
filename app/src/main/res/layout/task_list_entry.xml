<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:descendantFocusability="blocksDescendants"
                android:layout_margin="10dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbItemCompleted"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Space
        android:id="@+id/cbSpacer"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cbItemCompleted"
        android:layout_toEndOf="@+id/cbItemCompleted"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cbSpacer"
        android:layout_toEndOf="@+id/cbSpacer"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/tvTaskText"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

</RelativeLayout>